<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<VBox minHeight="180.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="components.ListaAlunosController">
    <BorderPane>
        <left>
            <Label fx:id="titleLabel" text="Alunos"/>
        </left>
        <right>
            <Button
                    fx:id="botaoCriar"
                    mnemonicParsing="false"
                    onAction="#onCriar"
                    text="Criar Aluno"
            />
        </right>
    </BorderPane>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
    </padding>

    <TableView fx:id="tabela" editable="true">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="selectCol" minWidth="40" maxWidth="40"/>
            <TableColumn fx:id="nomeCol" text="Nome"/>
            <TableColumn fx:id="cpfCol" text="CPF"/>
            <TableColumn fx:id="emailCol" text="Email"/>
            <TableColumn fx:id="data_nascimentoCol" text="Data de Nascimento"/>
            <TableColumn fx:id="enderecoCol" text="EndereÃ§o"/>
        </columns>
    </TableView>

    <BorderPane>
        <right>
            <Button
                    fx:id="botaoRemover"
                    mnemonicParsing="false"
                    onAction="#onRemoverSelecionados"
                    text="Remover Selecionados"
            />
        </right>
        <padding>
            <Insets top="20" bottom="0" left="0" right="0" />
        </padding>
    </BorderPane>
</VBox>
