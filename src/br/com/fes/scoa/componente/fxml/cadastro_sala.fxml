<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox minHeight="180.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.fes.scoa.componente.CadastroSalaController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Close" />
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" text="Delete" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
        </Menu>
    </MenuBar>
    <HBox prefHeight="200.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_RIGHT" prefHeight="375.0" prefWidth="130.0" spacing="20.0">
            <padding>
                <Insets right="10.0" top="20.0" />
            </padding>
            <Label text="Prédio" />
         <Label text="Andar" />
         <Label text="Nome" />
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="12.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets left="10.0" right="10.0" top="16.0" />
            </padding>
            <TextField fx:id="campoPredio" promptText="Prédio da sala" />
         <TextField fx:id="campoAndar" promptText="Andar da sala" />
         <TextField fx:id="campoNome" promptText="Nome da sala" />
        </VBox>
    </HBox>
    <HBox alignment="CENTER" prefWidth="600.0">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
        <Button fx:id="botaoEnviar" defaultButton="true" mnemonicParsing="false" onAction="#onEnviar" text="Cadastrar">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </HBox>
</VBox>
