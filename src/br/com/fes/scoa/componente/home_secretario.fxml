<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.fes.scoa.componente.HomeSecretarioController">
   <TitledPane animated="false" text="Funções administrativas">
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <Button fx:id="botaoListaAlunos" mnemonicParsing="false" onAction="#onListaAlunos" text="Alunos"/>
         <Button fx:id="botaoNovoAluno" mnemonicParsing="false" onAction="#onNovoAluno" text="Cadastrar aluno"/>
         <Button fx:id="botaoListaProfessores" mnemonicParsing="false" onAction="#onListaProfessores" text="Professores"/>
         <Button fx:id="botaoNovoProfessor" mnemonicParsing="false" onAction="#onNovoProfessor"
                 text="Cadastrar professor"/>
         <Button fx:id="botaoNovaDisciplina" mnemonicParsing="false" onAction="#onNovaDisciplina"
                 text="Cadastrar disciplina"/>
      </VBox>
   </TitledPane>
</VBox>
